{
  "name": "poe-mods",
  "version": "1.7.0",
  "description": "Emulates interaction of Mods with Items, Atlas etc. in Path of Exile",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "module": "es/index.js",
  "files": [
    "dist/",
    "es/",
    "lib/",
    "src/"
  ],
  "scripts": {
    "build": "npm run build:browser && npm run build:commonjs && npm run build:es",
    "build:browser": "tsc --declaration --module System --outFile dist/index.js",
    "build:commonjs": "tsc --declaration --module CommonJS --outDir lib",
    "build:es": "tsc --declaration --module ES6 --outDir es",
    "build:verify": "tsc --watch --noEmit",
    "clean": "rimraf coverage dist es lib",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "format": "prettier --write src/**/*.ts",
    "format:check": "prettier --list-different src/**/*.ts",
    "lint": "tslint --project tsconfig.json",
    "prepublishOnly": "npm run build",
    "test": "jest --watch",
    "test:check": "jest --ci",
    "test:ci": "jest --ci --coverage --runInBand",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eps1lon/poe-mods.git"
  },
  "keywords": [
    "js",
    "poe"
  ],
  "author": "eps1lon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eps1lon/poe-mods/issues"
  },
  "homepage": "https://github.com/eps1lon/poe-mods#readme",
  "devDependencies": {
    "@types/jest": "^22.1.1",
    "@types/lodash": "^4.14.101",
    "@types/node": "^9.4.1",
    "coveralls": "^3.0.0",
    "fetch-mock": "^6.0.0",
    "jest": "^22.0.0",
    "pre-push": "^0.1.1",
    "prettier": "^1.6.1",
    "rimraf": "^2.6.2",
    "ts-jest": "^22.0.3",
    "tslint": "^5.9.1",
    "tslint-config-prettier": "^1.7.0",
    "tslint-eslint-rules": "^5.0.0",
    "typescript": "^2.7.1"
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "make-error": "^1.3.3"
  },
  "jest": {
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(js|ts)$",
    "mapCoverage": true,
    "moduleFileExtensions": [
      "ts",
      "js"
    ]
  },
  "pre-push": [
    "lint",
    "format:check",
    "test:check"
  ]
}
