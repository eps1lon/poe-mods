{
  "name": "poe-mods",
  "version": "1.5.3",
  "description": "Emulates interaction of Mods with Items, Atlas etc. in Path of Exile",
  "main": "lib/index.js",
  "files": [
    "lib/"
  ],
  "scripts": {
    "build": "npm run build:clean && npm run build:lib && npm run build:flow",
    "build:clean": "rimraf lib",
    "build:lib": "babel -d lib src --ignore \"**/__*__/**\"",
    "build:flow": "flow-copy-source -v -i \"**/__*__/**\" src lib",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "dev:schema": "node ./scripts/schemaRuntime",
    "flow": "flow",
    "flow:coverage": "flow-coverage-report -i 'src/**/*.js' -t html",
    "format": "prettier --write src/**/*.js",
    "format:check": "prettier --list-different src/**/*.js",
    "lint": "eslint src/**/*.js",
    "prepublishOnly": "npm run build",
    "test": "jest --watch",
    "test:check": "jest --ci",
    "test:ci": "jest --ci --coverage --runInBand",
    "test:coverage": "jest --coverage"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/eps1lon/poe-mods.git"
  },
  "keywords": [
    "js",
    "poe"
  ],
  "author": "eps1lon",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/eps1lon/poe-mods/issues"
  },
  "homepage": "https://github.com/eps1lon/poe-mods#readme",
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.0.0",
    "babel-jest": "^22.0.0",
    "babel-plugin-flow-runtime": "^0.15.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-flow-strip-types": "^6.22.0",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-preset-env": "^1.6.0",
    "babel-preset-flow": "^6.23.0",
    "coveralls": "^3.0.0",
    "eslint": "^4.6.1",
    "eslint-config-airbnb-base": "^12.0.0",
    "eslint-config-prettier": "^2.4.0",
    "eslint-plugin-flowtype": "^2.35.1",
    "eslint-plugin-import": "^2.7.0",
    "fetch-mock": "^5.12.2",
    "flow-bin": "^0.63.1",
    "flow-copy-source": "^1.2.1",
    "flow-coverage-report": "^0.4.0",
    "jest": "^22.0.0",
    "pre-push": "^0.1.1",
    "prettier": "^1.6.1",
    "regenerator-runtime": "^0.11.0",
    "rimraf": "^2.6.2"
  },
  "dependencies": {
    "flow-runtime": "^0.16.0",
    "lodash": "^4.17.4"
  },
  "jest": {
    "automock": false,
    "collectCoverage": false,
    "collectCoverageFrom": [
      "src/**/*.js"
    ],
    "coverageDirectory": "coverage"
  },
  "pre-push": [
    "lint",
    "format:check",
    "test:check"
  ]
}
